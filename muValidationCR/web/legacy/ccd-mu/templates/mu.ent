<!-- Successful assertions -->


<pattern id='p-mu-checks' see='#p-mu-checks'>
	<title>Meaningful Use Required Sections - checks validation phase</title>
	<rule context='/'>
           <report test="//cda:templateId[@root='2.16.840.1.113883.10.20.1']">This Meaningful Use CCD document DOES contain the template ID for CCD (2.16.840.1.113883.10.20.1).</report>            
	<report test="//cda:templateId[@root='2.16.840.1.113883.10.20.1.14']">This Meaningful Use CCD document DOES contain a (Lab) Results Section.</report>
	<report test="//cda:templateId[@root='2.16.840.1.113883.10.20.1.11']">This Meaningful Use CCD document DOES contain a Problems Section.</report>
	<report test="//cda:templateId[@root='2.16.840.1.113883.10.20.1.8']">This Meaningful Use CCD document DOES contain a Medications Section.</report>
	<report test="//cda:templateId[@root='2.16.840.1.113883.10.20.1.2']">This Meaningful Use CCD document DOES contain an (Allergies) Alerts Section.</report>
	<report test="//cda:templateId[@root='2.16.840.1.113883.10.20.1.6']">This Meaningful Use CCD document DOES contain an Immunizations Section.</report>
	<report test="//cda:templateId[@root='2.16.840.1.113883.10.20.1.12']">This Meaningful Use CCD document DOES contain a Procedures Section.</report>

           </rule>
</pattern>

